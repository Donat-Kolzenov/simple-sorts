{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe сборка активного файла",
			"command": "C:\\Compilers\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
				"${file}",
				"Swap.c",
				"BubbleSort.c",
				"BubbleSortV1.c",
				"SelectionSort.c",
				"InsertionSort.c",
				"InsertionSortV1.c",
				"InsertionSortV2.c",
				"CocktailSort.c",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: C:\\Compilers\\MinGW\\bin\\gcc.exe"
		}
	]
}